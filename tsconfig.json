{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom","dom.iterable","esnext"],
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": { "@/*": ["./*"] }
  },
  "include": [
    "next-env.d.ts",   // Nextâ€™s auto-generated types
    "global.d.ts",     // <-- our new file
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
